<div class="page-header">
  <h1>编辑商家(公司)信息</h1>
</div>
<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>
  <table class='table table-striped table-hover'>
    <tr>
      <td>公司名字</td>
      <td>
        <%= f.text_field :company_name, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>营业地址</td>
      <td>
        <%= f.text_field :address, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>主要联系人名字</td>
      <td>
        <%= f.text_field :primary_contact_name, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>主要联系人email</td>
      <td>
        <%= f.text_field :primary_contact_email, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>主要联系人电话</td>
      <td>
        <%= f.text_field :primary_contact_telephone, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>收款人银行</td>
      <td>
        <%= f.text_field :bank_name, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>收款人姓名</td>
      <td>
        <%= f.text_field :bank_account_owner_name, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>收款人账号</td>
      <td>
        <%= f.text_field :bank_account, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit '确定', :class => 'btn btn-primary' %>
      </td>
      <td>
        <%= link_to '取消', users_path, :class => 'btn btn-default' %>
      </td>
    </tr>

  </table>
<% end %>
