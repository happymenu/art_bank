<html>
  <head>
    <title>中国艺术银行</title>
    <%= javascript_include_tag "application_simple" %>
  </head>
  <body style='background-image: url(<%= asset_path "logo.jpg"%>); background-position:center;'>
    <div id="click_div"  style="width:100%;height:100%;" align='center'>
      <img id="img" src="<%= asset_path 'logo_star.png' %>" width="256" height="256" style='display:none;margin-top:70px;'/>
      <div id='title' style='color: #a61713;
        font-size: 46px;
        bottom: 300px;
        text-align: center; display: none;
        '>
        <img src="<%= asset_path 'logo_text.png' %>">
      </div>
    </div>


<script>
$(document).ready(function(){
  $('#img').
    css('margin-left', '-=1000px').
    show().
    animate({'margin-left': '+=1000', opacity: 1, },
      3000, function(){
        $('#title').
          css('opacity', 0).
          css('margin-top', '-=100px').
          show().
          animate({opacity:1, 'margin-top': '+=100'}, 1000, function(){
                window.location="/landing_pictures";
            })
      })
  $('#img').rotate({
    angle:0,
    animateTo: (360 * 3),
    easing: function (x,t,b,c,d){
      return c*(t/d)+b;
    },
    duration: 3000,
  });
});
</script>
  </body>
</html>
