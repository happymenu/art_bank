<head>
<title>
  智人巨变站
</title>

<script id="allmobilize" charset="utf-8" src="http://a.yunshipei.com/38481664c3057945356711f1d95bd2a3/allmobilize.min.js"></script>
<meta http-equiv="Cache-Control" content="no-siteapp" /><link rel="alternate" media="handheld" href="#" />
</head>
<body>
    <table>
      <tr>
        <td>
          <!-- 左侧的两个图片 -->
          <table style='border-spacing: 0px'>
            <tr>
              <td><%= link_to image_tag(@landing_pictures[0].try(:logo).try(:url), style: 'height: 50%' ),
                "/items?landing_picture_id=#{@landing_pictures[0].id}"
                %></td>
            </tr>
            <tr>
              <td><%= link_to image_tag(@landing_pictures[1].try(:logo).try(:url), style: 'height: 50%' ),
                "/items?landing_picture_id=#{@landing_pictures[1].id}"
                %></td>
            </tr>
          </table>
        </td>
        <td>
          <!-- 右侧的两个图片 -->
          <table style='border-spacing: 0px'>
            <tr>
              <td><%= link_to image_tag(@landing_pictures[2].try(:logo).try(:url), style: 'height: 50%' ),
                "/items?landing_picture_id=#{@landing_pictures[2].id}"
                %></td>
            </tr>
            <tr>
              <td><%= link_to image_tag(@landing_pictures[3].try(:logo).try(:url), style: 'height: 50%' ),
                "/items?landing_picture_id=#{@landing_pictures[3].id}"
                %></td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
</body>
