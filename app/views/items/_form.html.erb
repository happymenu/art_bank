<%= form_for(@item) do |f| %>
  <div class="field">
    <%= f.label :logo %><br>
    当前图片: <%= image_tag @item.logo.url, :style => 'height: 200px' %>
    <%= f.file_field :logo %>
  </div>
  <div class="field">
    标题：
    <%= f.text_field :title %>
  </div>
  <div class="field">
    正文：
    <%= f.text_area :introduction %>
  </div>
  <div class="actions">
    <%= f.submit '确定'%>
  </div>
<% end %>
