<%= form_for(@item) do |f| %>
  请选择 所属的分类：
  <%= f.collection_select :landing_picture_id , LandingPicture.all, :id, :name %>
  <div class="field">
    <%= f.label :logo, "LOGO,会显示在作品列表中" %><br>
    <% if @item.logo.present? %>
    当前LOGO: (注意严格遵循尺寸）
    <%= image_tag @item.logo.url, :style => 'height: 200px' %>
    <% else %>
    当前无LOGO
    <% end %>
    <%= f.file_field :logo %>
  </div>
  <div class="field">
    标题：
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="field">
    正文：
    <%= f.cktext_area :introduction%>
  </div>
  <div class="actions">
    <%= f.submit '确定'%>
  </div>
<% end %>
