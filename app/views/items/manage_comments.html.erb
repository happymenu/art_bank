<h3><%= @item.title %> 的评论</h3>
<%= image_tag @item.logo, style: 'width: 300px' %>
<table class='table table-hover table-striped'>
  <tr style='text-align: center'>
    <th style="width: 50px"></th>
    <th>内容</th>
    <th style='width: 100px'>IP </th>
    <th style='width: 150px'>留言时间</th>
    <th style='width: 150px'>操作</th>
  </tr>
  <% @item.comments.order('created_at desc').each_with_index do |comment, index| %>
  <tr>
      <td><%= index + 1 %></td>
    <td>
      <%= comment.body %>
    </td>
    <td>
      <%= comment.ip %>
    </td>
    <td>
      <%= comment.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
    </td>
    <td><%# link_to '编辑', edit_comment_path(comment), class: 'btn btn-default'%>
    <%= link_to '删除', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
  <% end %>
</table>

