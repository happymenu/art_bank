<% @comment ||= Comment.new %>
<%= form_for(@comment) do |f| %>
  <%= hidden_field_tag "comment[item_id]", @item.id %>
  <%= f.text_area :body, :placeholder => '请输入评论内容', :style=> 'width: 96%; height: 150px;
  font-size: 20px' %>
  <div class="actions" style='margin: 10px'>
    <%= f.submit '我写好了', :style=> 'font-size: 24px' %>
  </div>
<% end %>
